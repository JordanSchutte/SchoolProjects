{{> header }}
<div id="contents">
    <div class="box">
        <div>
            <div id="contact" class="body">
                <h1>Contact</h1>
                <form action="index.html" method="post">
                    <table>
                        <tbody>
                            {{#each formFields}}
                            <tr>
                                <td>{{this.name}}:</td>
                                <td><input type="{{this.type}}" class="txtfield"></td>
                            </tr>
                            {{/each}}
                            <tr>
                                <td></td>
                                <td><input type="submit" value="Send" class="btn"></td>
                            </tr>
                        </tbody>
                    </table>
                </form>
                <h2>{{companyInfo.name}}</h2>
                <p>
                    <span>Address:</span> {{companyInfo.address}}
                </p>
                <p>
                    <span>Telephone Number:</span> {{companyInfo.telephone}}
                </p>
                <p>
                    <span>Fax Number:</span> {{companyInfo.fax}}
                </p>
            </div>
        </div>
    </div>
</div>
{{> footer }}