{{> header }}
<div id="contents">
    <div class="box">
        <div>
            <div class="body">
                <h1>Rooms</h1>
                <ul id="rooms">
                    {{#each rooms}}
                    <li>
                        <a href="rooms.html"><img src="{{this.image}}" alt="{{this.name}}"></a>
                        <h2><a href="rooms.html">{{this.name}}</a></h2>
                        <p>{{this.description}}</p>
                        <span class="rate">Rate: {{this.rate}}</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
{{> footer }}